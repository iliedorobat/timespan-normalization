<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ro.webdata.normalization.timespan</groupId>
    <artifactId>timespan-normalization</artifactId>
    <version>1.3</version>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <property>
                    <name>env.type</name>
                    <value>dev</value>
                </property>
            </activation>
            <build>
                <directory>${directory}</directory>
            </build>
            <properties>
                <directory>${project.basedir}/target</directory>
            </properties>
        </profile>
    </profiles>

    <build>
        <finalName>timespan-normalization-${version}</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>ro.webdata.normalization.timespan.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-commons-echo</id>
                        <configuration>
                            <groupId>ro.webdata.echo.commons</groupId>
                            <artifactId>commons-echo</artifactId>
                            <version>1.3</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/src/main/resources/commons-echo-1.3.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <id>install-dspace-parser</id>
                        <configuration>
                            <groupId>ro.webdata.parser.xml.dspace</groupId>
                            <artifactId>Dublin-Core-Parser</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/src/main/resources/Dublin-Core-Parser-1.1.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                    <execution>
                        <id>install-lido-parser</id>
                        <configuration>
                            <groupId>ro.webdata.parser.xml.lido</groupId>
                            <artifactId>LIDO-Parser</artifactId>
                            <version>1.1</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/src/main/resources/LIDO-Parser-1.1.jar</file>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>ro.webdata.echo.commons</groupId>
            <artifactId>commons-echo</artifactId>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>ro.webdata.parser.xml.dspace</groupId>
            <artifactId>Dublin-Core-Parser</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>ro.webdata.parser.xml.lido</groupId>
            <artifactId>LIDO-Parser</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
        </dependency>
    </dependencies>
</project>